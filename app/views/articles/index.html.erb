<h1> List of all articles</h1>
<p>
<%= link_to "Create new article", new_article_path %>
</p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>


<% @articles.each do |artic| %>
  <tr>
    <td><%= artic.title %></td>
    <td><%= artic.description %></td>
    <td><%= link_to "Edit", edit_article_path(artic) %></td>
    <td><%= link_to "Show", article_path(artic) %></td>
    <td><%= link_to "Delete", article_path(artic), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>
<p>
<%= link_to "Back to home page", root_path %>
</p>